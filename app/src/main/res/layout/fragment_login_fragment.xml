<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".Fragments.login_fragment"
    android:background="#D8D8D8">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ScrollView
            app:layout_constraintBottom_toTopOf="@id/login_btn"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_width="match_parent"
            android:layout_height="0dp">

        <com.google.android.material.card.MaterialCardView


            app:layout_constraintBottom_toTopOf="@id/login_btn"

            app:cardCornerRadius="30dp"
            android:layout_marginVertical="20dp"
            android:id="@+id/login_card"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <LinearLayout
                android:id="@+id/ll1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

            <TextView

                android:autoSizeTextType="uniform"
                android:autoSizeMinTextSize="12sp"
                android:autoSizeMaxTextSize="100sp"
                android:autoSizeStepGranularity="2sp"
                android:maxLines="1"

                android:padding="7dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Signin into your account"
                android:layout_gravity="center"
                android:textSize="33dp"
                android:textColor="@color/red"
                android:textStyle="bold"
                android:textFontWeight="1200"/>

            <TextView
                android:layout_marginHorizontal="10dp"
                android:autoSizeTextType="uniform"
                android:autoSizeMinTextSize="12sp"
                android:autoSizeMaxTextSize="100sp"
                android:autoSizeStepGranularity="2sp"

                android:maxLines="1"
                android:padding="7dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Email"
                android:layout_gravity="left"
                android:textSize="21dp"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:textFontWeight="1200"/>

                <EditText
                    android:layout_marginHorizontal="10dp"
                    android:drawablePadding="51dp"
                    android:drawableEnd="@drawable/mail_34"
                    android:padding="7dp"
                    android:id="@+id/email"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Enter Your Email ID"/>


                <TextView
                    android:layout_marginHorizontal="10dp"
                    android:autoSizeTextType="uniform"
                    android:autoSizeMinTextSize="12sp"
                    android:autoSizeMaxTextSize="100sp"
                    android:autoSizeStepGranularity="2sp"
                    android:maxLines="1"

                    android:padding="7dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Password"
                    android:layout_gravity="left"
                    android:textSize="21dp"
                    android:textColor="@color/black"
                    android:textStyle="bold"
                    android:textFontWeight="1200"/>

                <EditText
                    android:inputType="textPassword"
                    android:layout_marginHorizontal="10dp"
                    android:drawableEnd="@drawable/password_34"
                    android:padding="7dp"
                    android:id="@+id/password"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Enter Password"/>

                <TextView

                    android:autoSizeTextType="uniform"
                    android:autoSizeMinTextSize="12sp"
                    android:autoSizeMaxTextSize="100sp"
                    android:autoSizeStepGranularity="2sp"
                    android:maxLines="1"

                    android:id="@+id/forgot_pass"
                    android:layout_margin="7dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Forgot Passwrord?"
                    android:textColor="@color/red"
                    android:textSize="18dp"
                    android:layout_gravity="right"
                    />

                <TextView

                    android:autoSizeTextType="uniform"
                    android:autoSizeMinTextSize="12sp"
                    android:autoSizeMaxTextSize="100sp"
                    android:autoSizeStepGranularity="2sp"
                    android:maxLines="1"

                    android:layout_marginTop="25dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Login with"
                    android:textSize="20dp"
                    android:layout_marginBottom="10dp"
                    android:textColor="@color/black"
                    android:layout_gravity="center"/>

                <LinearLayout
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/google"
                        android:layout_width="56dp"
                        android:layout_height="56dp"
                        android:src="@drawable/googlee"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="OR"
                        android:textColor="@color/black"
                        android:layout_marginHorizontal="11dp"/>

                    <ImageView
                        android:id="@+id/fb"
                        android:layout_width="56dp"
                        android:layout_height="56dp"
                        android:src="@drawable/fb"/>



                </LinearLayout>

                <LinearLayout
                    android:layout_marginVertical="15dp"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">


                    <TextView

                        android:autoSizeTextType="uniform"
                        android:autoSizeMinTextSize="12sp"
                        android:autoSizeMaxTextSize="100sp"
                        android:autoSizeStepGranularity="2sp"
                        android:maxLines="1"

                        android:textSize="16dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Don't have an account?"
                        android:textColor="@color/black"
                        android:layout_marginHorizontal="5dp"/>
                    <TextView

                        android:autoSizeTextType="uniform"
                        android:autoSizeMinTextSize="12sp"
                        android:autoSizeMaxTextSize="100sp"
                        android:autoSizeStepGranularity="2sp"
                        android:maxLines="1"

                        android:id="@+id/sign"
                        android:textSize="16dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Register Now"
                        android:textColor="@color/red"
                        android:layout_marginHorizontal="11dp"/>




                </LinearLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"/>


            </LinearLayout>



        </com.google.android.material.card.MaterialCardView>


</ScrollView>

        <androidx.cardview.widget.CardView
            android:backgroundTint="#D8D8D8"


            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"

            android:id="@+id/login_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/login"

                android:background="@drawable/bottom_bg"
                android:layout_gravity="center"
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="fill_parent"
                android:textSize="20dp"
                android:padding="10dp"
                android:textColor="@color/white"
                android:text="Login"/>


        </androidx.cardview.widget.CardView>


    </androidx.constraintlayout.widget.ConstraintLayout>




</FrameLayout>